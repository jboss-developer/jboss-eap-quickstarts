<?xml version="1.0"?>
<project
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
   xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
   <modelVersion>4.0.0</modelVersion>
   <parent>
      <artifactId>forge-parent</artifactId>
      <groupId>org.jboss.seam.forge</groupId>
      <version>1.0.0-SNAPSHOT</version>
   </parent>
   <artifactId>forge-distribution</artifactId>
   <name>Seam Forge - Distribution</name>
   <dependencies>
      <dependency>
         <groupId>org.jboss.seam.forge</groupId>
         <artifactId>forge-shell</artifactId>
         <version>${project.version}</version>
      </dependency>
      <dependency>
         <groupId>org.jboss.weld</groupId>
         <artifactId>weld-core</artifactId>
      </dependency>
      <dependency>
         <groupId>org.jboss.seam.forge</groupId>
         <artifactId>forge-j2ee-plugins</artifactId>
         <version>${project.version}</version>
      </dependency>
      <dependency>
         <groupId>org.jboss.seam.forge</groupId>
         <artifactId>forge-dev-plugins</artifactId>
         <version>${project.version}</version>
      </dependency>
      <dependency>
         <groupId>org.jboss.seam.forge</groupId>
         <artifactId>forge-scaffold</artifactId>
         <version>${project.version}</version>
      </dependency>
      <dependency>
         <groupId>org.jboss.seam.forge</groupId>
         <artifactId>forge-reference-guide</artifactId>
         <version>${project.version}</version>
         <type>war</type>
      </dependency>
      <dependency>
         <groupId>org.jboss.logging</groupId>
         <artifactId>jboss-logging</artifactId>
      </dependency>
   </dependencies>
   <build>
      <finalName>forge</finalName>
      <plugins>
         <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
         </plugin>
         <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.1.1</version>
            <executions>
               <execution>
                  <goals>
                     <goal>java</goal>
                  </goals>
               </execution>
            </executions>
            <configuration>
               <executable>java</executable>
               <includeProjectDependencies>true</includeProjectDependencies>
               <mainClass>org.jboss.seam.forge.shell.Bootstrap</mainClass>
               <systemProperties>
                  <systemProperty>
                     <key>seam.forge.shell.colorEnabled</key>
                     <value>true</value>
                  </systemProperty>
               </systemProperties>
            </configuration>
         </plugin>
      </plugins>
   </build>
   <profiles>
      <profile>
         <id>colorDisabled</id>
         <activation>
            <property>
               <name>colorDisabled</name>
            </property>
         </activation>
         <build>
            <plugins>
               <plugin>
                  <groupId>org.codehaus.mojo</groupId>
                  <artifactId>exec-maven-plugin</artifactId>
                  <configuration>
                     <systemProperties>
                        <systemProperty>
                           <key>seam.forge.shell.colorEnabled</key>
                           <value>false</value>
                        </systemProperty>
                     </systemProperties>
                  </configuration>
               </plugin>
            </plugins>
         </build>
      </profile>
   </profiles>
</project>
