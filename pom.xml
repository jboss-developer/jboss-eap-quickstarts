    <profiles>
        <profile>
            <!-- All the quickstarts that require Postgres to be running -->
            <id>default</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>default</name>
                    <value>!disabled</value>
                </property>
            </activation>
            <modules>
                <!-- All the modules that require nothing but JBoss Enterprise
                    Application Platform or JBoss AS -->
                <module>bean-validation</module>
                <module>jboss-as-bmt</module>
                <module>jboss-as-cdi-injection</module>
                <module>jboss-as-cdi-portable-extension</module>
                <module>jboss-as-ejb-in-ear</module>
                <module>jboss-as-ejb-in-war</module>
                <module>jboss-as-ejb-remote-parent</module>
                <module>jboss-as-ejb-security</module>
                <module>jboss-as-greeter</module>
                <module>jboss-as-helloworld</module>
                <module>jboss-as-helloworld-errai</module>
                <module>jboss-as-helloworld-gwt</module>
                <module>jboss-as-helloworld-html5</module>
                <module>jboss-as-helloworld-jms</module>
                <module>jboss-as-helloworld-rf</module>
                <module>jboss-as-helloworld-osgi</module>
                <module>jboss-as-helloworld-rs</module>
                <module>jboss-as-helloworld-singleton</module>
                <module>jboss-as-hibernate3</module>
                <module>jboss-as-hibernate4</module>
                <module>jboss-as-kitchensink</module>
                <module>jboss-as-kitchensink-ear</module>
                <module>jboss-as-kitchensink-html5-mobile</module>
                <module>jboss-as-kitchensink-jsp</module>
                <module>jboss-as-kitchensink-ml</module>                
                <module>jboss-as-kitchensink-ml-ear</module>
                <module>jboss-as-log4j</module>
                <module>jboss-as-logging-tools</module>
                <module>jboss-as-mail</module>
                <module>jboss-as-numberguess</module>
                <module>jboss-as-payment-cdi-event</module>
                <module>jboss-as-richfaces-validation</module>
                <module>jboss-as-servlet-async</module>
                <module>jboss-as-servlet-filterlistener</module>
                <module>jboss-as-servlet-security</module>
                <module>jboss-as-tasks</module>
                <module>jboss-as-tasks-jsf</module>
                <module>jboss-as-temperature-converter</module>
                <module>jboss-as-tasks-rs</module>
                <module>jboss-as-wicket-ear-parent</module>
                <module>jboss-as-wicket-war</module>
                <module>jboss-as-xml-jaxp</module>
                <module>jboss-as-xml-dom4j</module>
            </modules>
        </profile>
        <profile>
            <!-- All the quickstarts that require Postgres to be running -->
            <id>requires-postgres</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>requires-postgres</name>
                    <value>!disabled</value>
                </property>
            </activation>
            <modules>
                <module>jboss-as-cmt</module>
                <module>jboss-as-jts-parent</module>
            </modules>
        </profile>
        <profile>
            <!-- All the quickstarts that have weird requirements around deployment that Maven can't handle -->
            <id>complex-dependencies</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>complex-dependencies</name>
                    <value>!disabled</value>
                </property>
            </activation>
            <modules>
                <module>jboss-as-jax-rs-client</module>
                <module>jboss-as-jts-parent</module>
                <module>jboss-as-inter-app-parent</module>                
            </modules>
        </profile>
        <profile>
            <!-- All the quickstarts that require the "standalone-full" profile
                to be in use -->
            <id>requires-full</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>requires-full</name>
                    <value>!disabled</value>
                </property>
            </activation>
            <modules>
                <module>jboss-as-helloworld-mdb</module>
                <module>jboss-as-jta-crash-rec</module>
            </modules>
        </profile>
        <profile>
            <!-- All the quickstarts that require the xts to be enabled -->
            <id>requires-xts</id>
            <activation>
                <activeByDefault>true</activeByDefault>
                <property>
                    <name>requires-xts</name>
                    <value>!disabled</value>
                </property>
            </activation>
            <modules>
                <module>jboss-as-wsat-simple</module>
                <module>jboss-as-wsba-coordinator-completion-simple</module>
                <module>jboss-as-wsba-participant-completion-simple</module>
            </modules>
        </profile>
        <profile>
            <!-- All the quickstarts that don't actually use Maven. Don't
                activate this profile! We just include this for completeness. -->
            <id>non-maven</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <modules>
                <module>forge-from-scratch</module>
                <module>h2-console</module>
                <module>jts-distributed-crash-rec</module>
            </modules>
        </profile>
        <profile>
            <!-- Zip all module sources individually under target/zips 
             Should only be called on the parent project with the -N option: 
             mvn clean package -N
             or
             mvn clean groovy:execute -N
             
             Alternatively, you can execute zipmodules.sh (or zipmodules.bat on Windows)
             
             The script also generates a default project example descriptor for JBoss Tools 
             under target/zips/quickstart.xml.
             By default, the base url for the examples is target/zips/<modulename>.zip.
             The base url can be overridden using the -Dexamples.base.url parameter :
             mvn clean groovy:execute -N -Dexamples.base.url=http://foo/bar/
             
             -->
            <id>zip-modules</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.gmaven</groupId>
                        <artifactId>gmaven-plugin</artifactId>
                        <version>1.4</version>
                        <inherited>false</inherited>
                        <executions>
                            <execution>
                                <id>zip-modules</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>execute</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <source>${project.basedir}/src/main/assembly/zip_modules.groovy</source>
                        </configuration>
                     </plugin>
                </plugins>
            </build>
        </profile>        
    </profiles>

    <build>
        <plugins>
            <!-- The JBoss AS plugin deploys your apps to a local JBoss AS
                container -->
            <!-- Disabling it here means that we don't try to deploy this
                POM! -->
            <plugin>
                <groupId>org.jboss.as.plugins</groupId>
                <artifactId>jboss-as-maven-plugin</artifactId>
                <version>${version.org.jboss.as.plugins.maven.plugin}</version>
                <inherited>true</inherited>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
