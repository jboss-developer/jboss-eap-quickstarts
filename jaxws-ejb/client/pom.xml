<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                             http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.jboss.quickstarts.eap</groupId>
        <artifactId>jboss-jaxws-ejb</artifactId>
        <version>6.4.0-redhat-SNAPSHOT</version>
        <!--
        <relativePath>../../pom.xml</relativePath>
        -->
    </parent>

    <artifactId>jboss-jaxws-ejb-client</artifactId>
    <packaging>jar</packaging>
    <name>JBoss EAP Quickstart: jaxws-ejb - client</name>
    <url>http://maven.apache.org</url>

    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <distribution>repo</distribution>
            <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
        </license>
    </licenses>

   <repositories>
     <!-- repo needed to retrieve jbossws-native-core -->
     <repository>
       <id>jboss-community-repository</id>
       <url>http://repository.jboss.org/nexus/content/groups/public/</url>
     </repository>
   </repositories> 
   
   <pluginRepositories>
      <pluginRepository>
         <id>onejar-maven-plugin.googlecode.com</id>
         <url>http://onejar-maven-plugin.googlecode.com/svn/mavenrepo</url>
      </pluginRepository>
   </pluginRepositories>
 
   <dependencies>

      <dependency>
          <groupId>org.jboss.quickstarts.eap</groupId>
          <artifactId>jboss-jaxws-ejb-service</artifactId>
          <version>${project.version}</version>
         <classifier>classes</classifier>
      </dependency>      
        <!-- required for client to resolve org/jboss/ws/core/jaxws/spi/ProviderImpl -->      
       <dependency>
           <groupId>org.jboss.ws.native</groupId>
           <artifactId>jbossws-native-core</artifactId>
           <version>3.4.1.GA</version>
       </dependency>
        <!-- required for ProviderImpl to resolve org.jboss.logging.Logger -->
       <dependency>
           <groupId>org.jboss.logging</groupId>
           <artifactId>jboss-logging-spi</artifactId>
           <version>2.1.2.GA</version>
       </dependency> 
   </dependencies>

   <build>
       <!-- define the name for the deployable archive instead of using the default name with the version -->
       <finalName>${project.artifactId}</finalName>
      <plugins>
<!--        
         <plugin>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>${version.maven-compiler-plugin}</version>
         </plugin>
-->
         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-jar-plugin</artifactId>
            <version>${version.maven-jar-plugin}</version>
            <configuration>
               <archive>
                  <manifest>
                     <addClasspath>true</addClasspath>
                     <mainClass>org.jboss.quickstarts.ws.client.Client</mainClass>
                  </manifest>
               </archive>
            </configuration>
         </plugin>

         <plugin>
            <groupId>org.dstovall</groupId>
            <artifactId>onejar-maven-plugin</artifactId>
            <version>${version.onejar-maven-plugin}</version>
            <executions>
               <execution>
                  <configuration>
                     <addClasspath>true</addClasspath>
                     <mainClass>org.jboss.quickstarts.ws.client.Client</mainClass>
                  </configuration>
                  <goals>
                     <goal>one-jar</goal>
                  </goals>
               </execution>
            </executions>
         </plugin>

      </plugins>
   </build>

</project>
