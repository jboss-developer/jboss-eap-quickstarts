<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

  <g:HTMLPanel ui:field="root">
    <h1>GWT Hello World</h1>
    <form name="theForm" onsubmit="sayHelloButton.click(); return false;">
      <fieldset>  
        <label for="name" id="name_label">Name</label> 
        <input name="name" ui:field="name" type="text" required="required" placeholder="Your Name"/>
        <g:Button ui:field="sayHelloButton" text="Say Hello"/><g:Label ui:field="result"/>
      </fieldset>   
    </form>
  </g:HTMLPanel>

</ui:UiBinder>
